<h1>Payment Status</h1>

<table>
  <thead>
    <tr>
      <th>Student ID</th>
      <th>Membership</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payment_statuses.each do |payment_status| %>
      <tr>
        <td><%= payment_status.student_id %></td>
        <td><%= payment_status.membership %></td>
        <td><%= payment_status.start_date %></td>
        <td><%= payment_status.end_date %></td>
        <td><%= link_to 'Show', payment_status %></td>
        <td><%= link_to 'Edit', edit_payment_status_path(payment_status) %></td>
        <td><%= link_to 'Destroy', payment_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


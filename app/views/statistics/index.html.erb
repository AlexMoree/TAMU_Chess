<p id="notice"><%= notice %></p>

<h1>Statistics</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Chess.com username</th>
      <th>Blitz</th>
      <th>Rapid</th>  
      <th>Total played</th>
      <th>Lichess.org username</th>
      <th>Blitz</th>
      <th>Rapid</th>  
      <th>Total played</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% update_statistic_table %>
    <% @statistics.each do |statistic| %>
      <tr>
        <td><%= statistic.actual_name %></td>
        <td><%= statistic.chess_username %></td>
        <td><%= statistic.chess_blitz %></td>
        <td><%= statistic.chess_rapid %></td>
        <td><%= statistic.chess_total_played %></td>
        <td><%= statistic.lichess_username %></td>
        <td><%= statistic.lichess_blitz %></td>
        <td><%= statistic.lichess_rapid %></td>
        <td><%= statistic.lichess_total_played %></td>
        <td><%= link_to 'Show', statistic %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<div class="center">
  <div class="background_color">
    <div class="font">

      <div class="header_all">
        <h1>Qr Codes</h1>
      </div>
      
      <table class="table_center">
        <tbody>
          <thead>
            <tr>
              <th><%= link_to "Title", :sort => "title" %></th>
              <th><%= link_to "Qr Code Link", :sort => "qr_url" %></th>
              <th colspan="3"></th>
            </tr>
          </thead>
        </tbody>

        <tbody>
          <% @qr_codes.each do |qr_code| %>
            <tr>
              <td><%= qr_code.title %></td>
              <td>
              <%= link_to "Qr Code Link", qr_code.qr_url, :target => "_blank" %>
              </td>
              <td><%= link_to 'Show', qr_code %></td>
              <td><%= link_to 'Edit', edit_qr_code_path(qr_code) %></td>
              <td><%= link_to 'Destroy', qr_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
      <br>
      <%= link_to 'New Qr Code', new_qr_code_path %>
      <br>
      <br>
      <%= link_to 'Back', homes_path %>
      <br>
        <br>
    </div>
  </div>
</div>